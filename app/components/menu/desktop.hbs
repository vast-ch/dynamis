<nav
  class="flex items-center justify-between p-6 lg:px-8"
  aria-label={{t "menu.global"}}
>
  <div class="flex lg:flex-1">
    <a href="#" class="-m-1.5 p-1.5">
      <span class="sr-only">{{t "company.name"}}</span>
      <ResponsiveImage class="!h-8 !w-auto" @src={{this.logo}} />
    </a>
  </div>
  <div class="flex lg:hidden">
    <button
      {{on "click" this.mobileMenu.toggle}}
      type="button"
      class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
    >
      <span class="sr-only">{{t "menu.open"}}</span>
      <HeroIcon @icon="bars-3" class="h-6 w-6" />
    </button>
  </div>
  <div class="hidden lg:flex lg:gap-x-12">
    {{#each @menuItems as |item|}}
      <LinkTo @route="index" @query={{hash scrollTo=item.scrollTo}}>
        {{t item.label}}
      </LinkTo>
    {{/each}}
  </div>
  <div class="hidden lg:flex lg:flex-1 lg:justify-end">
    {{! <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Log in
      <span aria-hidden="true">&rarr;</span></a> }}
  </div>
</nav>