<div
  class="mt-16 border-t border-white/10 pt-8 sm:mt-20 lg:mt-24 lg:flex lg:items-center lg:justify-between"
>
  <div>
    <h3 class="text-sm font-semibold leading-6 text-white">{{t
        "footer.newsletter.heading"
      }}</h3>
    <p class="mt-2 text-sm leading-6 text-gray-300">{{t
        "footer.newsletter.description"
      }}</p>
  </div>
  <form class="mt-6 sm:flex sm:max-w-md lg:mt-0">
    <label for="email-address" class="sr-only">{{t
        "footer.newsletter.label"
      }}</label>
    <input
      type="email"
      name="email-address"
      id="email-address"
      autocomplete="email"
      required
      class="w-full min-w-0 appearance-none rounded-md border-0 bg-white/5 px-3 py-1.5 text-base text-white shadow-sm ring-1 ring-inset ring-white/10 placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-teal-500 sm:w-56 sm:text-sm sm:leading-6"
      placeholder={{t "footer.newsletter.placeholder"}}
    />
    <div class="mt-4 sm:ml-4 sm:mt-0 sm:flex-shrink-0">
      <button
        type="submit"
        class="flex w-full items-center justify-center rounded-md bg-teal-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-teal-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-500"
      >{{t "footer.newsletter.button"}}</button>
    </div>
  </form>
</div>